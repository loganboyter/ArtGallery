@model ArtGallery.Web.Models.ArtistVM

<h2>
    @Model.Artist.Name
    <a href="/Home/EditArtist/@Model.Artist.Id" class="btn btn-info">
        Edit
    </a>
    <a href="/Home/DeleteArtist/@Model.Artist.Id" class="btn btn-danger">
        Delete
    </a>
</h2>
<h4>@Model.Artist.Desc</h4>

<hr />
<h4>Add Art</h4>
<form method="post" action="/Home/AddArt/@Model.Artist.Id">
    <input type="text" name="title" placeholder="Art Title" />
    <input type="text" name="link" placeholder="Art Link" />
    <input type="submit" class="btn btn-success" />
</form>
<hr />

@foreach (var Art in Model.Arts)
{
    <div class="well-sm">
        <a href="/Home/ArtDetails/@Art.Id" class="btn btn-primary">
            <img src="@Art.Link" style="width:50px;height:50px" class="img-rounded" /> @Art.Title
        </a>
    </div>
}